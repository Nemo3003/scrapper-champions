{
  "manifest_version": 3,
  "name": "Scrapper Champions",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://champions.innew.net/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://hooks.slack.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}